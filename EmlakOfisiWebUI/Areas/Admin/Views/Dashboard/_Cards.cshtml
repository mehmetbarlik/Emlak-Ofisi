<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Mülk</h6>
                <h5 class="card-title">Sayısı</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("EstateSummary")
                </h3>
                <a asp-controller="Estate" asp-action="Index" class="card-link text-white">Mülkler</a>
                <a asp-controller="Estate" asp-action="Create" class="card-link text-white">Yeni Mülk</a>
            </div>
        </div>
    </div>

<div class="col-md-3">
        <div class="card bg-danger text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Kategori</h6>
                <h5 class="card-title">Sayısı</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("CategorySummary")
                </h3>
                <a asp-controller="Category" asp-action="Index" class="card-link text-white">Kategoriler</a>
                <a asp-controller="Category" asp-action="Create" class="card-link text-white">Yeni Kategori Oluştur</a>
            </div>
        </div>
    </div>


    <div class="col-md-3">
        <div class="card bg-info text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Kullanıcı</h6>
                <h5 class="card-title">Sayısı</h5>
                <h3 class="text-center display-3">
                    @await Component.InvokeAsync("UserSummary")
                </h3>
                <a asp-controller="User" asp-action="Index" class="card-link text-white">Kullanıcılar</a>
                <a asp-controller="User" asp-action="Create" class="card-link text-white">Yeni Kullanıcı Oluştur</a>
            </div>
        </div>
    </div>
